{
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": ["error"],
		"semi": [2, "never"],
		"no-tabs": "off",
		"quotes": [2, "single"],
		"no-undef": "error",
		"no-return-await": "error"
	},
	"extends": ["prettier"],
	"plugins": ["prettier"]
}
